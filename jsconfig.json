{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@lib/*": [
                "lib/*"
            ],
            "@utils/*": [
                "utils/*"
            ],
            "@config/*": [
                "config/*"
            ],
            "@assets/*": [
                "assets/*"
            ],
            "@components/*": [
                "components/*"
            ],
            "@commerce": [
                "../packages/commerce/src"
            ],
            "@commerce/*": [
                "../packages/commerce/src/*"
            ],
            "@framework": [
                "../packages/swell/src"
            ],
            "@framework/*": [
                "../packages/swell/src/*"
            ]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.js"
    ],
    "exclude": [
        "node_modules"
    ]
}